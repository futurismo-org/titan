{
  "name": "titan-server-app",
  "description": "Server App for Titan",
  "scripts": {
    "dev": "next",
    "build": "source ./.production.env; next build",
    "start": "next start",
    "deploy:netlify": "npm run build && next export",
    "deploy:firebase": "npm run build && next export && firebase deploy",
    "lint": "eslint . --ext .js,.jsx,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.jsx,.tsx"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link-http": "^1.5.14",
    "graphql": "^14.3.0",
    "graphql-tag": "^2.10.1",
    "next": "^8.1.0",
    "node-fetch": "^2.6.0",
    "react": "^16.8.6",
    "react-apollo": "^2.5.5",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
