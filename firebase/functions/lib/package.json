{
  "name": "titan-client-app",
  "description": "Client App for Titan",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "cp package.json .env lib && APP_ENV=development firebase serve --only functions -P development",
    "shell": "APP_ENV=development firebase functions:shell",
    "deploy:development": "APP_ENV=development firebase deploy --only functions -P development",
    "deploy:production": "APP_ENV=production firebase deploy --only functions -P production",
    "logs": "firebase functions:log",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --fix --ext .js,.ts",
    "verify": "npm run lint && tsc",
    "build": "npm run verify",
    "watch": "TSC_NONPOLLING_WATCHER=1 npm run tsc -w",
    "db:seeds": "./bin/db_seeds.sh",
    "db:clear": "./bin/db_clear.sh",
    "db:generate": "APP_ENV=development npm run db:clear && APP_ENV=development npm run db:seeds",
    "sss": "./bin/rg_fzf_remote.sh",
    "ss": "./bin/rg_fzf.sh"
  },
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "@firebase/app-types": "^0.4.0",
    "@google-cloud/firestore": "^2.0.0",
    "body-parser": "^1.19.0",
    "busboy": "^0.3.1",
    "cors": "^2.8.5",
    "discord-rpc": "^3.0.2",
    "dotenv": "^8.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "firebase": "^6.0.2",
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.3.0",
    "firebase-tools": "^7.0.1",
    "firestore-seed": "^0.0.6",
    "form-data": "^2.4.0",
    "moment": "^2.24.0",
    "stripe": "^7.2.0",
    "twit": "^2.2.11",
    "typescript": "^3.4.5",
    "ulid": "^2.3.0",
    "util": "^0.12.0"
  },
  "devDependencies": {
    "@types/busboy": "^0.2.3",
    "@types/cors": "^2.8.5",
    "@types/es6-promise": "^3.3.0",
    "@types/express": "^4.17.0",
    "@types/faker": "^4.1.5",
    "@types/moment": "^2.13.0",
    "@types/node": "^12.0.2",
    "@types/stripe": "^6.30.2",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.1.6",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.1",
    "ts-node": "^8.2.0",
    "tsc": "^1.20150623.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
