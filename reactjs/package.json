{
  "name": "titan-client-app",
  "description": "Client App for Titan",
  "private": true,
  "scripts": {
    "dev": "PORT=3000 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy:netlify": "NODE_ENV=production npm run build && npm run export",
    "deploy": "NODE_ENV=production npm run build && firebase deploy",
    "lint": "eslint . --ext .js,.jsx,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.jsx,.tsx"
  },
  "dependencies": {
    "@material-ui/core": "^4.0.0",
    "@material-ui/icons": "^4.0.0",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link-http": "^1.5.14",
    "firebase": "4.12.1",
    "firebase-admin": "^7.4.0",
    "firebase-functions": "^2.3.1",
    "firebaseui": "^4.0.0",
    "graphql": "^14.3.0",
    "graphql-tag": "^2.10.1",
    "node-fetch": "^2.6.0",
    "react": "^16.8.6",
    "react-apollo": "^2.5.5",
    "react-apollo-hooks": "^0.4.5",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.1",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "@types/node": "^12.0.2",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "prettier": "^1.17.1",
    "typescript": "^3.4.5",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run tsc",
      "npm run lint:fix",
      "git add"
    ]
  }
}
