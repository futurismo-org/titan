{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["reactjs/src/**/*", "firebase/functions/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "build"]
}
