{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": [
    "reactjs/src/**/*.tsx",
    "reactjs/src/**/*.ts",
    "firebase/functions/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "build"]
}
